<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eduardocucharro.reediteye.details.PostDetailsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_post_details"
        android:padding="@dimen/text_grid"
        tools:listitem="@layout/view_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progress_post_details"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</FrameLayout>
